<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/root_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:id="@+id/collapse_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/collapsed_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/fut_prices_logo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="60dp"
                android:src="@mipmap/redx"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/expanded_container"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:background="#000000"
            android:orientation="horizontal"
            android:padding="5dp"
            android:visibility="gone"
            tools:visibility="visible">


            <ImageView
                android:id="@+id/expanded_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@mipmap/fut_prices_logo"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/close_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="2dp"
                android:src="@mipmap/redx"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fut_coin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/close_button"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/expanded_iv"
                android:src="@mipmap/futcoin"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/fut_player_name"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/fut_price"
                android:layout_marginBottom="6dp"
                android:layout_marginStart="-1dp"
                android:layout_toEndOf="@+id/fut_coin"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1dp"
                android:padding="5dp"
                android:text="name"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fut_price"
                android:layout_width="98dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/fut_coin"
                android:layout_marginStart="-1dp"
                android:layout_marginTop="-4dp"
                android:layout_toEndOf="@+id/fut_coin"
                android:gravity="center_vertical"
                android:lineSpacingExtra="1dp"
                android:padding="5dp"
                android:text="price"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>